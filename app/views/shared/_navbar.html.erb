<div class="navbar">
  <%= link_to  "Cayliv", :root, class: "navbar-logo" %>
    <ul class="nav">
      <% if current_user %>
        <li class="navbar-link">
          <%= link_to  "Favorites", :root %>
            <%#change this route!%>
        </li>
        <li class="navbar-link">
          <%= link_to  "My orders", :root %>
            <%# change this route! %>
        </li>
        <li class="navbar-link">
          <%= link_to  "Help", pages_help_path %>
            <%# change this route! %>
        </li>
        <li class="navbar-link">
          <img src="" alt="" />
          <%# render user profile pic! %>
        </li>
        <% else %>
          <li class="navbar-link">
            <%= link_to  "Sign up", new_user_registration_path %>
          </li>
          <li class="navbar-link">
            <%= link_to  "Login", new_user_session_path %>
          </li>

          <% end%>

    </ul>
</div>

<% content_for :after_everything do %>

  <script>
    const nav = document.querySelector('.navbar');

    document.addEventListener("scroll", () => {
      const scroll = window.scrollY;
      if (scroll > 0) {
        nav.classList.add('fixed')
      } else if (scroll === 0) {
        nav.classList.remove('fixed')
      }

    });
  </script>
  <% end %>